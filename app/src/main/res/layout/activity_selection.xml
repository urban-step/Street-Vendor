<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorLightGray"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/app_logo"
                />


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SelectionActivity"
    android:weightSum="3">

    <androidx.cardview.widget.CardView
        android:id="@+id/selection_card_vendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/green_background"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor /\nविक्रेता"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/colorBlack"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/vendor"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/selection_card_looking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorLightGray"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/green_background"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Looking For\n Vendor /\nविक्रेता की तलाश"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/colorBlack"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/looking_for_vendor"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/selection_card_surveyor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/green_background"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surveyor /\nसर्वेक्षक"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/colorBlack"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/serveyor"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</LinearLayout>